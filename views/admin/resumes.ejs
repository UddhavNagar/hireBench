<% layout('layouts/boilerplate') %>

<div class="container mt-5 admin-resumes-page" >
  <h2 class="mb-4">All Resumes</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Candidate</th>
        <th>Title</th>
        <th>Uploaded At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% resumes.forEach(resume => { %>
        <tr>
          <td><%= resume.candidate && resume.candidate.username ? resume.candidate.username : 'Unknown' %></td>
          <td><%= resume.title %></td>
          <td><%= resume.createdAt?.toLocaleDateString() %></td>
          <td class="d-flex gap-2">
            <!-- View Resume -->
            <a href="/resumes/<%= resume._id %>" target="_blank" class="btn btn-sm btn-outline-info">
              <i class="fas fa-eye"></i> View
            </a>

            <!-- Delete Resume -->
            <form action="/resumes/<%= resume._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this resume?');">
              <button class="btn btn-sm btn-outline-danger">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
