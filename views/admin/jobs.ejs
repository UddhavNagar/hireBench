<% layout('layouts/boilerplate') %>
<div class="container mt-5 admin-container">
  <h2 class="mb-4">All Jobs</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Company</th>
        <th>Posted By</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.company %></td>
          <td><%= job.postedBy?.username || 'N/A' %></td>
          <td class="d-flex gap-2">
            <!-- View job details -->
            <a href="/jobs/<%= job._id %>" class="btn btn-sm btn-outline-info">
              <i class="fas fa-eye"></i> View
            </a>

            <!-- Delete job using DELETE method -->
            <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this job?');">
              <button class="btn btn-sm btn-outline-danger">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
