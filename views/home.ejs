<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <!-- Header -->
  <header class="text-center mb-5">
    <h1 class="display-4 fw-bold">Welcome to HireBench</h1>
    <p class="lead text-secondary">India’s Smartest Resume Screening and Job Hiring Platform</p>
    <div class="d-flex justify-content-center flex-wrap gap-3 mt-4">
      <a href="/users/register/candidate" class="btn btn-primary btn-lg px-4">Join as Candidate</a>
      <a href="/users/register/recruiter" class="btn btn-success btn-lg px-4">Join as Recruiter</a>
      <a href="/jobs" class="btn btn-outline-dark btn-lg px-4">Explore Jobs</a>
      <a href="/users/login" class="btn btn-outline-primary btn-lg px-4">Login</a>
    </div>
  </header>

  <!-- About Section -->
  <section class="mb-5">
    <h2 class="text-center mb-4">Why HireBench?</h2>
    <p class="text-center text-muted px-3">
      HireBench is a modern, AI-powered resume screening and hiring platform built to streamline the recruitment process. Whether you are a job seeker aiming to land your dream role or a recruiter looking for top talent, HireBench simplifies every step.
    </p>
  </section>

  <!-- Features -->
  <section>
    <h2 class="mb-4">Platform Features</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">🧭 Smart Job Discovery</h5>
            <p class="card-text">Browse jobs by title, company, or location. Use skill-based filters and score matching to find your perfect role.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">📄 Resume Scoring System</h5>
            <p class="card-text">Get real-time score feedback based on how well your resume matches a job’s skill requirements.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">📊 Skill Analytics Dashboard</h5>
            <p class="card-text">View charts of in-demand skills, top candidate skills, and hiring trends with toggleable pie/bar graphs.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">🏢 Top Hiring Companies</h5>
            <p class="card-text">Select a skill and instantly see which companies are hiring for it — with live job postings and recruiter details.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">📂 Resume Management</h5>
            <p class="card-text">Upload, update, and manage multiple resumes. Link specific resumes to jobs and view application score breakdowns.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">📈 Application Tracker</h5>
            <p class="card-text">Track your job applications with live updates: Pending, Shortlisted, Interview, or Rejected — all in one place.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">🔍 Resume Insights</h5>
            <p class="card-text">Get average skill counts, top-performing skills, and compare your resume against job requirements.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">📢 Recruiter Control Panel</h5>
            <p class="card-text">Post jobs, receive applications, view matching scores, and shortlist candidates — all from a powerful dashboard.</p>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title">🛡️ Admin Supervision</h5>
            <p class="card-text">Full admin control for banning users, cleaning data, and overseeing platform activity for integrity and performance.</p>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Footer CTA -->
  <section class="text-center mt-5 pt-4 border-top">
    <h4 class="mb-3">Ready to streamline your hiring or job search?</h4>
    <a href="/users/register" class="btn btn-lg btn-warning fw-semibold px-4">Get Started Now</a>
  </section>
</div>
